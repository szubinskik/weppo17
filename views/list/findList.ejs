<form onsubmit="f_search_submit(); return false;">
    <div class="form-row">
        <div class="form-group col-8">
            <input type="text" class="form-control" id="t_search" placeholder="Wyszukiwanie..." autofocus>
        </div>
        <div class="form-group col-2">
            <button type="submit" class="btn btn-primary btn-light" id="b_search"><svg-icon><src href="sprite/sprite.svg#si-glyph-magnifier" /></svg-icon></button>
        </div>
        <div class="form-group col-2">
            <button type="button" class="btn btn-primary btn-light" id="b_adv_search" onclick="b_adv_search_clicked()"><svg-icon><src href="sprite/sprite.svg#si-glyph-circle-triangle-down" /></svg-icon></button>
        </div>
    </div>
</form>

