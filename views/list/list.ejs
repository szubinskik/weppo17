<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Lista gier</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="sprite/iconwc.js"></script>
</head>
<body>
    <div class="container.float">
    
        <!-- Header -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Nazwa sklepu</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <%- include("basketWidget.ejs") %>
             </div>
        </nav>

        <div class="row">

            <!-- Game list -->
            <div class="col-2">

                <!-- Search -->
                <%- include("findList.ejs") %>
                <!--
                    <form action="/list", method="get">
                    Wpisz szukany tytu≈Ç: <input type="text" name="title"/>
                    <input type="submit" value="Szukaj">
                    </form> -->

                <!-- Games -->
                <div class="list-group">
                    <% for(game of games) { %>
                    <%- include("gameView.ejs", game) %>
                    <% } %>
                </div>
            </div>

            <!-- Game description -->
            <div class="col-5">
                <p>test</p>
            </div>
        </div>
    </div>

    <!-- Bootstrap scripts -->
